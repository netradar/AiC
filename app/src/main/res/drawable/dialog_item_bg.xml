<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- This is the line -->
            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/dialogItemSelectedBGColor" />
                </shape>
            </item>
            <item android:right="-1px" android:left="-1px" android:top="-1px">
                <shape>
                    <stroke android:width="1px" android:color="@color/dialogColor" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:right="-1px" android:left="-1px" android:top="-1px">
                <shape>
                    <stroke android:width="1px" android:color="@color/dialogColor" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
